package com.ropisport.gestion.service;

import com.ropisport.gestion.model.dto.request.PagoDetalleRequest;
import com.ropisport.gestion.model.dto.response.PagoDetalleResponse;

import java.util.List;

public interface PagoDetalleService {
    
    PagoDetalleResponse createPagoDetalle(PagoDetalleRequest request);
    
    PagoDetalleResponse getPagoDetalleById(Integer id);
    
    List<PagoDetalleResponse> getAllPagoDetalles();
    
    List<PagoDetalleResponse> getPagoDetallesByPagoId(Integer pagoId);
    
    List<PagoDetalleResponse> getPagoDetallesBySociaId(Integer sociaId);
    
    PagoDetalleResponse updatePagoDetalle(Integer id, PagoDetalleRequest request);
    
    void deletePagoDetalle(Integer id);
    
    void deletePagoDetallesByPagoId(Integer pagoId);
}